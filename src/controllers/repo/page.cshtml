<div class="card-body">
    <div class="col-md-12 d-flex flex-row-reverse" style="margin-bottom: 10px;">
        <button type="button" class="btn btn-primary btn-success" onclick="location.href='/repo/add';"><i class="fa fa-plus"></i> Добавить</button>
    </div>
    <table id="repos" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Имя</th>
                <th>Идентификатор</th>
                <th>Ссылка</th>
                <th>Пользователь</th>
                <th>Комментарий</th>
                <th class="col-md-12 d-flex flex-row">&nbsp;</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ЭлементСписка in Model.Список)
            {
                <tr>
                    <td>@ЭлементСписка.Имя</td>
                    <td>@ЭлементСписка.Идентификатор</td>
                    <td>@ЭлементСписка.Ссылка</td>
                    <td>@ЭлементСписка.Пользователь</td>
                    <td>@ЭлементСписка.Комментарий</td>
                    <td class="col-md-12 d-flex flex-row">
                        <form method="post">
                            <input type="hidden" name="Идентификатор" value=@ЭлементСписка.Идентификатор>
                            <button type="submit" class="btn btn-edit" formaction="/repo/edit"><i class="fa fa-edit"></i> Изменнить</button>
                            <button type="submit" class="btn btn-danger"formaction="/repo/remove"><i class="fa fa-trash"></i> Удалить</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>